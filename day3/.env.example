# --- RAG retrieval config ---
RAG_DOCS_DIR=data/docs
RAG_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_BATCH_SIZE=32
RAG_DEFAULT_TOP_K=3
RAG_SOURCE_MAX_CHARS=220
RAG_LOG_PATH=logs/rag_requests.jsonl
RAG_METRICS_MAX_RECENT=1000
RAG_PROMPT_STYLE_DEFAULT=v1
RAG_ASK_CACHE_ENABLED=false
RAG_ASK_CACHE_TTL_SEC=300
RAG_ASK_CACHE_MAX_ITEMS=256

# --- LLM provider config ---
# echo | ollama | deepseek
LLM_PROVIDER=echo

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=

# DeepSeek
DEEPSEEK_API_KEY=your_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
